{{#each productList}}
<div class="row">
  {{#each this}}
  <div class="card p-2 m-1" style="width: 18rem;">
    <img src="{{this.imagePath}}" class="card-img-top img-responsive" alt="Image">
    <div class="card-body">
      <h5 class="card-title">{{this.title}}</h5>
      <p class="card-text">{{this.description}}</p>
      <span class="pull-letf">{{this.price}}</span>        
      <a href="#" class="btn btn-primary pull-right" role="button"><i class="fa fa-shopping-cart"></i> Cart</a> 
    </div>
  </div>
  {{/each}}
</div>
{{/each}}