<div class="container-fluid" style="z-index: -1">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>Product Categories</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                             fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                             stroke-linejoin="round" class="feather feather-home">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            <polyline points="9 22 9 12 15 12 15 22"></polyline>
                        </svg>
                    </a></li>
                    <li class="breadcrumb-item">Dashboard</li>
                    <li class="breadcrumb-item active">Default</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>{{title}} </h5><span></span>
                    <a href="/category/create" class="btn btn-outline-primary pull-right"><i class="fa fa-plus-circle"></i> Add New Category</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive product-table">
                        <table class="display" id="basic-1">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th>Image</th>
                                <th>name</th>
                                <th>Description</th>
                                <th>CreatedDate</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#if exists }}
                            {{#each categoryList}}
                                <tr>
                                    <td>{{this._id}}</td>
                                    <td><img width="100" height="100" src="{{this.imagePath}}" class="circle-img rounded-15 img-thumbnail" alt="{{this.title}}" /></td>
                                    <td>
                                        <span>{{this.name}}</span>
                                    </td>
                                    <td>{{this.description}}</td>
                                    <td>{{this.createdAt}}</td>
                                    <td>
                                        <a href='/category/{{this._id}}'><i class="fa fa-eye text-info"></i></a>
                                        <a href='/category/edit/{{this._id}}'><i class="fa fa-edit text-secondary"></i></a>
                                        <a href='/category/delete/{{this._id}}'><i class="fa fa-trash text-danger"></i></a>
                                    </td>
                                </tr>
                            {{/each}}
                            {{else}}
                            <tr><td colspan="6">No Data Available</td></tr>
                            {{/if}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends-->








