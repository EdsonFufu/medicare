<div class="bd-example rounded border border-secondary p-4 mt-3">
<div class="row text-center">{{title}}</div>
<div class="row">
<table class="table table-striped table-bordered border-primary">
  <tbody>
        <tr>
            <th class="table-light" scope="col">#</th><td>{{user._id}}</td>
        </tr> 
        <tr>
            <th scope="col">Image</th><td><img width="100" height="100" src="{{user.imagePath}}" class="circle-img rounded-15 img-thumbnail" alt="{{user.fullname}}" /></td>
        </tr> 
        <tr>
            <th scope="col">Full Name</th><td>{{user.fullname}}</td>
        </tr> 
        <tr>
            <th scope="col">Email</th><td>{{user.email}}</td>
        </tr> 
        <tr>
            <th scope="col">Username</th><td>{{user.userRole}}</td>
        </tr>
        <tr>
            <th scope="col">isActive?</th><td>{{user.isActive}}</td>
        </tr>
  </tbody>
</table>
</div>
</div>


