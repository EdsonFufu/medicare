<div class="bd-example rounded border border-secondary p-4 mt-3">
<div class="row text-center">{{title}}</div>
<div class="row">
<table class="table table-striped table-bordered border-primary">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Photo</th>
      <th scope="col">fullname</th>
      <th scope="col">email</th>
      <th scope="col">UserRole</th>
      <th scope="col">isActive?</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each userList}}
        <tr>
            <td>{{this._id}}</td>
            <td><img width="100" height="100" src="{{this.imagePath}}" class="circle-img rounded-circle img-thumbnail" alt="{{this.title}}" /></td>
            <td>{{this.fullname}}</td>
            <td>{{this.email}}</td>
            <td>{{this.userRole}}</td>
            <td>{{this.isActive}}</td>
            <td>
                <a href='/user/view/{{this._id}}'><i class="fa fa-eye"></i></a>
                <a href='/user/edit/{{this._id}}'><i class="fa fa-edit"></i></a>
                <a href='/user/delete/{{this._id}}'><i class="fa fa-trash"></i></a>
            </td>
            
        </tr> 
    {{/each}}
  </tbody>
</table>
</div>
</div>


