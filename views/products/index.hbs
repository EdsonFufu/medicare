<div class="bd-example rounded border border-secondary p-4 mt-3">
<div class="row text-center">{{title}}</div>
<div class="row">
<table class="table table-striped table-bordered border-primary">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Image</th>
      <th scope="col">title</th>
      <th scope="col">price</th>
      <th scope="col">available</th>
       <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each productList}}
        <tr>
            <td>{{this._id}}</td>
            {{!-- <td><img width="100" height="100" src="{{this.imagePath}}" class="circle-img rounded-circle img-thumbnail" alt="{{this.title}}" /></td> --}}

            <td><img width="100" height="100" src="{{this.imagePath}}" class="circle-img rounded-15 img-thumbnail" alt="{{this.title}}" /></td>
            <td>{{this.title}}</td>
            <td>{{this.price}}</td>
            <td>{{this.available}}</td>
            <td>
                <a href='/product/view/{{this._id}}'><i class="fa fa-eye"></i></a>
                <a href='/product/edit/{{this._id}}'><i class="fa fa-edit"></i></a>
                <a href='/product/delete/{{this._id}}'><i class="fa fa-trash"></i></a>
            </td>
            
        </tr> 
    {{/each}}
  </tbody>
</table>
</div>
</div>


