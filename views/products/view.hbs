<div class="bd-example rounded border border-secondary p-4 mt-3">
<div class="row text-center">{{title}}</div>
<div class="row">
<table class="table table-striped table-bordered border-primary">
  <tbody>
        <tr>
            <th class="table-light" scope="col">#</th><td>{{product._id}}</td>
        </tr> 
        <tr>
            <th scope="col">Image</th><td><img width="100" height="100" src="{{product.imagePath}}" class="circle-img rounded-15 img-thumbnail" alt="{{product.title}}" /></td>
        </tr> 
        <tr>
            <th scope="col">title</th><td>{{product.title}}</td>
        </tr> 
        <tr>
            <th scope="col">price</th><td>{{product.price}}</td>
        </tr> 
        <tr>
            <th scope="col">available</th><td>{{product.available}}</td>
        </tr>
  </tbody>
</table>
</div>
</div>


